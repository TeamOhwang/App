<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/messageTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="메시지를 가져오려면 버튼을 눌러주세요"
        android:textSize="18sp"
        android:textAlignment="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fetchButton" />

    <Button
        android:id="@+id/fetchButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메시지 가져오기"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/messageTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/dbTestButton" />

    <Button
        android:id="@+id/dbTestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DB 연결 테스트"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/fetchButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/showTestMessagesButton" />

    <Button
        android:id="@+id/showTestMessagesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test 테이블 메시지 보기"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@+id/dbTestButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/liveTalkButton" />

    <Button
        android:id="@+id/liveTalkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="실시간 채팅"
        app:layout_constraintTop_toBottomOf="@+id/showTestMessagesButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>